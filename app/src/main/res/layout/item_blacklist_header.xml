<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_blacklist_header_height"
    xmlns:tools="http://schemas.android.com/tools">

    <android.support.constraint.Guideline
        android:id="@+id/guideline_vertical_left_text_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="@dimen/item_blacklist_header_guideline_vertical_left_text_margin"
        android:orientation="vertical"/>

    <TextView
        android:id="@+id/text_header"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="@id/guideline_vertical_left_text_margin"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center_vertical|left"
        android:textSize="@dimen/item_blacklist_header_text_header_size"
        android:maxLines="1"
        tools:text="@string/blacklist_item_numberlist_header_contacts_title"/>

</android.support.constraint.ConstraintLayout>