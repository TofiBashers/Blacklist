<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardview_wrapper_toolbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="?attr/actionBarSize"
    app:cardPreventCornerOverlap="false"
    app:cardElevation="@dimen/blacklist_add_num_with_settings_card_elevation"
    app:cardCornerRadius="@dimen/default_card_corner_radius"
    android:background="@color/primary">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/primary"
            app:theme="@style/ToolbarStyle" />

        <android.support.v7.widget.CardView
            android:id="@+id/card_wrapper_switch_ignore_hidden_numbers"
            android:layout_width="match_parent"
            android:layout_height="@dimen/partial_card_wrapper_toolbar_with_ignore_hidden_block_switch_ignore_hidden_height"
            android:layout_marginLeft="@dimen/partial_card_wrapper_toolbar_with_ignore_hidden_block_card_wrapper_margin_right_and_left"
            android:layout_marginRight="@dimen/partial_card_wrapper_toolbar_with_ignore_hidden_block_card_wrapper_margin_right_and_left"
            android:layout_marginTop="@dimen/partial_card_wrapper_toolbar_with_ignore_hidden_block_switch_ignore_hidden_margin_top_and_bottom"
            android:layout_marginBottom="@dimen/partial_card_wrapper_toolbar_with_ignore_hidden_block_switch_ignore_hidden_margin_top_and_bottom"
            app:contentPadding="@dimen/partial_card_wrapper_toolbar_with_ignore_hidden_block_card_wrapper_content_padding"
            app:cardPreventCornerOverlap="false"
            app:cardElevation="@dimen/partial_card_wrapper_toolbar_with_ignore_hidden_block_card_wrapper_elevation"
            app:cardCornerRadius="@dimen/partial_card_wrapper_toolbar_with_ignore_hidden_block_card_wrapper_corner_radius"
            android:background="@color/background">

            <com.gmail.tofibashers.blacklist.ui.common.StyledSwitch
                android:id="@+id/switch_ignore_hidden_numbers"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/partial_card_wrapper_toolbar_with_ignore_hidden_block_switch_ignore_hidden_margin_left"
                android:gravity="@integer/partial_card_wrapper_toolbar_with_ignore_hidden_block_gravity"
                app:switchPadding="@dimen/partial_card_wrapper_toolbar_with_ignore_hidden_block_switch_ignore_hidden_text_padding"
                android:ellipsize="end"
                android:text="@string/blacklist_ignore_hidden_action" />

        </android.support.v7.widget.CardView>

    </LinearLayout>
</android.support.v7.widget.CardView>