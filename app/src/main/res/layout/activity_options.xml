<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/constraint_root">

    <android.support.constraint.Guideline
        android:id="@+id/guideline_vertical_content_left_border"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="@dimen/options_guideline_vertical_content_left_border_percent"
        android:orientation="vertical"/>

    <android.support.constraint.Guideline
        android:id="@+id/guideline_vertical_change_button_right_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="@dimen/options_guideline_vertical_change_button_right_end_percent"
        android:orientation="vertical"/>

    <android.support.constraint.Guideline
        android:id="@+id/guideline_vertical_content_right_border"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="@dimen/options_guideline_vertical_content_right_border_percent"
        android:orientation="vertical"/>

    <com.gmail.tofibashers.blacklist.ui.common.ToolbarWrapperWithBottomElevation
        android:id="@+id/toolbar_with_elevation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <include
        android:id="@+id/textinput_edit_number"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/options_control_spaces"
        android:layout_marginTop="@dimen/options_control_spaces"
        app:layout_constraintLeft_toLeftOf="@id/guideline_vertical_content_left_border"
        app:layout_constraintRight_toRightOf="@id/guideline_vertical_content_right_border"
        app:layout_constraintBottom_toTopOf="@+id/checkbox_ignore_calls"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_with_elevation"
        layout="@layout/partial_textinput_edit_number"
        />

    <com.gmail.tofibashers.blacklist.ui.common.StyledCheckBox
        android:id="@+id/checkbox_ignore_calls"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/guideline_vertical_content_left_border"
        app:layout_constraintRight_toRightOf="@id/guideline_vertical_content_right_border"
        app:layout_constraintBottom_toTopOf="@+id/checkbox_ignore_sms"
        app:layout_constraintTop_toBottomOf="@id/textinput_edit_number"
        android:layout_marginBottom="@dimen/options_control_spaces"
        android:text="@string/options_ignore_calls_action" />

    <com.gmail.tofibashers.blacklist.ui.common.StyledCheckBox
        android:id="@+id/checkbox_ignore_sms"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/guideline_vertical_content_left_border"
        app:layout_constraintRight_toRightOf="@id/guideline_vertical_content_right_border"
        app:layout_constraintBottom_toTopOf="@+id/button_change_schedule"
        app:layout_constraintTop_toBottomOf="@id/checkbox_ignore_calls"
        android:layout_marginBottom="@dimen/options_control_spaces"
        android:text="@string/options_ignore_sms_action" />

    <Button
        android:id="@+id/button_change_schedule"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/guideline_vertical_content_left_border"
        app:layout_constraintRight_toRightOf="@id/guideline_vertical_change_button_right_end"
        app:layout_constraintTop_toBottomOf="@id/checkbox_ignore_sms"
        android:text="@string/options_change_ignoring_period_action" />

    <Button
        android:id="@+id/button_cancel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/guideline_vertical_content_left_border"
        app:layout_constraintRight_toLeftOf="@+id/button_save"
        app:layout_constraintTop_toBottomOf="@id/button_change_schedule"
        android:text="@string/options_cancel_action" />

    <Button
        android:id="@+id/button_save"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/button_cancel"
        app:layout_constraintRight_toRightOf="@id/guideline_vertical_content_right_border"
        app:layout_constraintTop_toBottomOf="@id/button_change_schedule"
        android:text="@string/action_save" />

    <include
        android:id="@+id/progressbar_view"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar_with_elevation"
        layout="@layout/partial_progress"/>

    <android.support.constraint.Group
        android:id="@+id/group_options_with_controls"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="textinput_edit_number,
                checkbox_ignore_calls,
                checkbox_ignore_sms,
                button_change_schedule,
                button_cancel,
                button_save" />

    <android.support.constraint.Group
        android:id="@+id/group_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="progressbar_view"/>

</android.support.constraint.ConstraintLayout >