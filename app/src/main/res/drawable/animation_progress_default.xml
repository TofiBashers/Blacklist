<?xml version="1.0" encoding="utf-8"?>
<rotate xmlns:android="http://schemas.android.com/apk/res/android"
    android:fromDegrees="0"
    android:pivotX="50%"
    android:pivotY="50%"
    android:toDegrees="720"
    android:repeatCount="infinite"
    android:interpolator="@android:anim/linear_interpolator">

    <shape
        android:shape="ring"
        android:innerRadius="@dimen/animations_progress_default_inner_radius"
        android:useLevel="false"
        android:thickness="@dimen/animations_progress_default_thickness">
        <gradient android:type="sweep" android:endColor="@color/enabled_icons" android:startColor="@color/background" />
    </shape>
</rotate>